<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magedin" translate="label" sortOrder="100">
            <label>MagedIn Technology</label>
        </tab>
        <section id="magedin_loginascustomer" translate="label comment" type="text" sortOrder="100" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <tab>magedin</tab>
            <label><![CDATA[Login As Customer]]></label>
            <resource>MagedIn_LoginAsCustomer::config_section</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="10" showInWebsite="1"
                   showInStore="1">
                <label><![CDATA[General Settings]]></label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label><![CDATA[Enabled]]></label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="redirect_after_login" translate="label comment" type="select" sortOrder="20"
                       showInStore="1" showInWebsite="1" showInDefault="1">
                    <label><![CDATA[After Login Redirect to]]></label>
                    <source_model>MagedIn\LoginAsCustomer\Model\Config\Source\CustomerRedirectOptions</source_model>
                    <comment><![CDATA[The user will be redirected to this page after login as a customer on front store.]]></comment>
                </field>
            </group>
            <group id="security" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Security Configuration</label>
                <comment>All the configurations about the security of this module is under this tab.</comment>
                <field id="secret_key_expiration_time" translate="label comment" type="text" sortOrder="120"
                       showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Expiration Time</label>
                    <comment><![CDATA[This is the amount time, IN SECONDS, that the generated secret key will be valid. For security reasons it can't be between 30 and 3600 seconds (1 hour).]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
