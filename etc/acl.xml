<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="MagedIn_LoginAsCustomer::login_as_customer" title="Login As Customer" sortOrder="90">
                        <resource id="MagedIn_LoginAsCustomer::button" title="Button" sortOrder="10" />
                        <resource id="MagedIn_LoginAsCustomer::logging" title="Logging" sortOrder="20" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MagedIn_LoginAsCustomer::config_section" title="Login As Customer Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
