<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magedin_login_as_customer_secret" resource="default" engine="innodb" comment="Login as Customer Table">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="false" identity="false"
                comment="Store ID"/>
        <column xsi:type="int" name="admin_user_id" padding="10" unsigned="true" nullable="false"
                comment="Admin User ID"/>
        <column xsi:type="varchar" name="secret" nullable="false" length="128" comment="Login Secret"/>
        <column xsi:type="timestamp" name="expires_at" on_update="false" nullable="false" comment="Expiration Time"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CUSTOMER_STORE">
            <column name="customer_id"/>
            <column name="store_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="MAGEDIN_LOGIN_AS_CUSTOMER_CUSTOMER_ID_CUSTOMER_CUSTOMER_ID"
                    table="magedin_login_as_customer_secret" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MAGEDIN_LOGIN_AS_CUSTOMER_STORE_ID_STORE_STORE_ID"
                    table="magedin_login_as_customer_secret" column="store_id" referenceTable="store"
                    referenceColumn="store_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="MAGEDIN_LOGIN_AS_CUSTOMER_ADMIN_USER_ID_ADMIN_USER_USER_ID"
                    table="magedin_login_as_customer_secret" column="admin_user_id" referenceTable="admin_user"
                    referenceColumn="user_id" onDelete="CASCADE"/>
    </table>
</schema>
